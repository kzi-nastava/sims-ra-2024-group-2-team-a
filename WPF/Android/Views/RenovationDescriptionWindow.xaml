<Window x:Class="BookingApp.WPF.Android.Views.RenovationDescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.WPF.Android.Views"
        mc:Ignorable="d"
        Title="RenovationDescriptionWindow" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Background="AntiqueWhite">
        <Label Content="Enter Renovation Description" FontFamily="Global Sans Serif" FontSize="20" 
               VerticalAlignment="Top" HorizontalAlignment="Center" BorderBrush="Black" BorderThickness="0,0,0,2" Padding="5,5,5,0"/>
        <TextBox Text="{Binding RenovationDTO.Description}" Height="150" Width="250" VerticalAlignment="Center" Margin="0,-15,0,15"/>
        <Button Content="Confirm" Height="50" Width="100" VerticalAlignment="Bottom" Margin="15" Command="{Binding ConfirmCommand}"/>
    </Grid>
</Window>
