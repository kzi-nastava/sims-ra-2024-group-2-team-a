<Window x:Class="BookingApp.WPF.Android.Views.AndroidYesNoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.WPF.Android.Views"
        mc:Ignorable="d"
        Title="Alert" Height="180" Width="300"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BitmapImage x:Key="AlertIcon" UriSource="../../../Resources/Images/Icons/android-alert.png"/>
        <Style TargetType="TextBlock" x:Key="ButtonLabelTextBlock">
            <Style.Setters>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="{StaticResource Roboto}"/>
            </Style.Setters>
        </Style>
    </Window.Resources>
    <Grid Background="{StaticResource Beige}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.Row="0" Height="50" Width="50" Source="{StaticResource AlertIcon}" RenderOptions.BitmapScalingMode="HighQuality" Margin="5,0"/>
        <TextBlock Text="{Binding Text}" Width="170" TextWrapping="Wrap" Grid.Column="1" Style="{StaticResource ButtonLabelTextBlock}"
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0"/>
        <Button x:Name="Yes" Content="Yes" FontSize="16" FontFamily="{StaticResource Roboto}" FontWeight="Medium" Foreground="{StaticResource Beige}" Background="{StaticResource Green}" Click="Yes_Click"
                Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Height="50" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,0,0,0"/>
        <Button x:Name="No" Content="No" FontSize="16" FontFamily="{StaticResource Roboto}" FontWeight="Medium" Foreground="{StaticResource Beige}" Background="{StaticResource Green}" Click="No_Click"
                Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Height="50" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,30,0"/>
    </Grid>
</Window>