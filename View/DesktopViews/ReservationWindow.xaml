<Window x:Class="BookingApp.View.DesktopViews.ReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View.DesktopViews"
        mc:Ignorable="d"
        Title="ReservationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel DockPanel.Dock="Right">
            
            <TextBox x:Name="PassengerNumberTextBox" Text="{Binding PassengerNumber, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Width="100" Margin="10"/>
            <Button Width="100" Height="50" x:Name="PassengerNumberConfirmationButton" Click="PassengerNumberConfirmationButton_Click"></Button>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible">
                <StackPanel x:Name="wrapPanelStackPanel"/>
            </ScrollViewer>
            <Button x:Name="ConfirmReservationButton"
                    Width="20" 
                    Height="20"
                    Click="ConfirmReservationButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
